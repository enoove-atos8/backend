                                                    "type": "string",
                                                    "example": "123456"
                                                },
                                                "confirm_pass_admin_email_tenant": {
                                                    "type": "string",
                                                    "example": "same password"
                                                },
                                                "user_activated_tenant": {
                                                    "type": "boolean",
                                                    "example": false
                                                },
                                                "user_type_tenant": {
                                                    "type": "string",
                                                    "example": "web"
                                                }
                                            },
                                            "type": "object"
