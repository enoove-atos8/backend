FROM php:8.2-fpm

WORKDIR /var/www
RUN mkdir -p backend/html
WORKDIR /var/www/backend/html

# Copy composer.lock and composer.json
COPY composer.lock composer.json ./

# Install dependencies
RUN apt-get update && apt-get upgrade && apt-get install -y \
    build-essential \
    libpng-dev \
    libjpeg62-turbo-dev \
    libfreetype6-dev \
    locales \
    zip \
    jpegoptim optipng pngquant gifsicle \
    unzip \
    git \
    curl \
    nginx \
    wget \
    nano \
    cron \
    lsb-release \
    software-properties-common \
    tesseract-ocr \
    tesseract-ocr-por \
    poppler-utils \
    libssl-dev \
    libcurl4-openssl-dev


# Xdebug
#RUN pecl install xdebug-3.3.1
#ADD docker/dev/xdebug.ini /usr/local/etc/php/conf.d/xdebug.ini

# Configure nginx
COPY docker/dev/app.conf /etc/nginx/sites-enabled/default

# Clear cache
RUN apt-get clean && rm -rf /var/lib/apt/lists/*

# Install extensions
RUN docker-php-ext-install pdo_mysql exif pcntl
RUN docker-php-ext-configure gd --with-freetype=/usr/include/ --with-jpeg=/usr/include/
RUN docker-php-ext-install gd

# Install Swoole
RUN pecl install swoole && docker-php-ext-enable swoole

# Install composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Copy existing application directory contents
COPY . .
COPY ./.env.dev ./.env

# Copy existing application directory permissions

RUN chmod -R 777 storage
RUN composer install --no-interaction --no-ansi
RUN php artisan optimize:clear
RUN php artisan config:cache

# Copy files of cron and config
COPY scripts/crons/artisan-cron /etc/cron.d/artisan-cron
RUN chmod 0644 /etc/cron.d/artisan-cron

# Add cron in crontab
RUN crontab /etc/cron.d/artisan-cron

# Expose port 8000 and start php-fpm server
EXPOSE 8000

# Start PHP-FPM and cron
COPY docker/dev/docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh
CMD ["docker-entrypoint.sh"]

# Start Octane server directly
#CMD ["sh", "-c", "php artisan octane:start --server=swoole --host=0.0.0.0 --port=8000 & tail -f /dev/null"]
