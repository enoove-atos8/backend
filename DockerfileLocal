FROM php:8.2-fpm-bookworm

WORKDIR /var/www
RUN mkdir -p backend/html
WORKDIR /var/www/backend/html

# Copy composer.lock and composer.json
COPY composer.lock composer.json ./

# Install dependencies
RUN apt-get update -y && apt-get upgrade -y && apt-get install -y \
    build-essential \
    libpng-dev \
    libjpeg62-turbo-dev \
    libfreetype6-dev \
    locales \
    zip \
    libzip-dev \
    jpegoptim optipng pngquant gifsicle \
    unzip \
    git \
    curl \
    nginx \
    wget \
    nano \
    cron \
    lsb-release \
    software-properties-common \
    tesseract-ocr \
    tesseract-ocr-por \
    poppler-utils \
    && docker-php-ext-configure zip \
    && docker-php-ext-install zip

# Install Node.js and npm
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs

# ========================================
# INSTALAÇÃO DO GOOGLE CHROME
# ========================================
RUN wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add - \
    && sh -c 'echo "deb [arch=amd64] http://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google.list' \
    && apt-get update \
    && apt-get install -y google-chrome-stable fonts-ipafont-gothic fonts-wqy-zenhei fonts-thai-tlwg fonts-khmeros fonts-kacst fonts-freefont-ttf libxss1 \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*

#Set Memory limit to 1GB
RUN echo "memory_limit = 1G" > /usr/local/etc/php/conf.d/memory-limit.ini

# Xdebug
RUN pecl install xdebug-3.3.1
ADD docker/local/xdebug.ini /usr/local/etc/php/conf.d/xdebug.ini

# Configure nginx
COPY docker/local/app.conf /etc/nginx/sites-enabled/default

# Clear cache
RUN apt-get clean && rm -rf /var/lib/apt/lists/*

# Install extensions
RUN docker-php-ext-install pdo_mysql exif pcntl
RUN docker-php-ext-configure gd --with-freetype=/usr/include/ --with-jpeg=/usr/include/
RUN docker-php-ext-install gd

# Install composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Copy existing application directory contents
COPY . .
COPY ./.env.local ./.env

# Copy existing application directory permissions
RUN chmod -R 777 storage
RUN composer install --no-interaction --no-ansi

# Install npm dependencies (including puppeteer)
RUN npm install

RUN php artisan optimize:clear
RUN php artisan config:cache

# Copy files of cron and config
COPY scripts/crons/artisan-cron /etc/cron.d/artisan-cron
RUN chmod 0644 /etc/cron.d/artisan-cron

# Add cron in crontab
RUN crontab /etc/cron.d/artisan-cron

# Expose port 8000 and start php-fpm server
EXPOSE 8000

# Start PHP-FPM and cron
COPY docker/local/docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh
CMD ["docker-entrypoint.sh"]
